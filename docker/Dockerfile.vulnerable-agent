# docker/Dockerfile.vulnerable-agent
# Dockerfile for the Vulnerable Test Agent HTTP server
#
# This builds a containerized version of the VulnerableTestAgent
# with an OpenAI-compatible HTTP API for security testing.
#
# WARNING: This container is for TESTING ONLY. It intentionally
# exposes security vulnerabilities for red-team testing purposes.

FROM python:3.12-slim

LABEL maintainer="The Red Council"
LABEL description="Intentionally vulnerable test agent for security testing"
LABEL warning="FOR TESTING ONLY - Contains intentional security flaws"

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files first for layer caching
COPY pyproject.toml ./

# Install Python dependencies
# Using pip directly since uv may not be available in slim image
RUN pip install --no-cache-dir \
    fastapi>=0.109.0 \
    uvicorn[standard]>=0.27.0 \
    pydantic>=2.5.0

# Copy source code
COPY src/ ./src/

# Create non-root user for security (even in test container)
RUN useradd --create-home --shell /bin/bash agent
USER agent

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV LOG_LEVEL=INFO

# Run the server
CMD ["python", "-m", "uvicorn", "src.test_agents.http_server:app", "--host", "0.0.0.0", "--port", "8080"]
